<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="jvalladaresS7.Vistas.Login">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="VENTANA DE INICIO DE SESION" FontSize="18" HorizontalTextAlignment="Center" />
            <Entry x:Name="txtUsuario" Placeholder="Ingrese el usuario"/>
            <Entry x:Name="txtContrasena" Placeholder="Ingrese contrasena" IsPassword="True"/>
            <Button x:Name="btnInicio" Text="INICIAR SESION" Clicked="btnInicio_Clicked"/>
            <Button x:Name="btnRegistro" Text="Registro" Clicked="btnRegistro_Clicked"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>